<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>//hasil search</title>
    <link rel="stylesheet" href="../css/search.css">
</head>
<body>
    <%- include('header') %>
    <section>
        <div id="topreviews">
            <h1> Bags </h1>
            <section id="Bags">
                <% for(let i=0; i<listBags.length; i++){ %>
                <div class="bag">
                    <div class="left">
                        <img src="<%= listBags[i].foto %>" class="fotoTas">
                    </div>
                    <div class="right">
                        <div class="prof">
                            <a class="Merek" href="/Bag/<%= listBags[i].tas_id %>"><%= listBags[i].nama_merek %></a>
                            <p class="subkat"><%= listBags[i].nama_sub_kategori %></p>
                        </div>
                        <div class="bintangs">
                            <%  for(let j=0; j<listBags[i].bintang; j++){ %>
                            <img src="../assets/gambar/bintang.png" class="bintang">
                            <%  } %>
                            <% if(listBags[i].bintang == null){ %>
                            <p>(No reviews yet!)</p>
                            <% } %>
                        </div>
                        <div class="reviewUser">
                            <p>Designer: <%= listBags[i].nama_designer %></p>
                            <p>Warna: <%= listBags[i].warna_utama %></p>
                            <div class="plt">
                                <p>Panjang: <%= listBags[i].panjang %></p>
                                <p>Lebar: <%= listBags[i].lebar %></p>
                                <p>Tinggi: <%= listBags[i].tinggi %></p>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <% } %>
            </section>
        </div>
        <div id="users">
            <h1> Users </h1>
            <section id="listUser">
                <% for (let i=0; i<listUsers.length; i++){ %>
                    <div class="foll" >
                        <img src="../assets/profile.png" width="50px" height="50px">
                        <a href="/anotherUser/<%= listUsers[i].username %>" name="<%= listUsers[i].username %>"><%= listUsers[i].username %></a>
                    </div>
                 <% } %>
            </section>
        </div>
    </section>
</body>
</html>