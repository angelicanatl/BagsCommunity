<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bag Statistics</title>
    <link rel="stylesheet" href="../css/statistikTas.css">
    <script src="/js/statistikTas.js" defer></script>
</head>
<body>
    <%- include('headerAdmin') %>
    <section>
        <div id="forInput">
            <section id="dateInput">
                <p> Date: </p>
                <form>
                    <input type="date" id="dateAwal"> 
                    <p>-</p>
                    <input type="date" id="dateAkhir"> 
                </form>
            </section>

            <button class="label" name ='Category' disabled> Category</button>
            <button class="label" name = 'Sub-Category'disabled> Sub-Category</button>
            <button class="label" name = 'Merek' disabled> Merek</button>
            <button class="label" name = 'Designer'disabled> Designer</button>
        </div>

        <div id="forGraph">
            <p id="tab"> Not Chosen Yet </p>
            <hr>
            <div class="graph" id="graph">
                <table>
                    <tr>
                        <th rowspan="2" id="tab"> Not Chosen Yet </th>
                        <th rowspan="2">Banyak Review</th>
                        <th colspan="3">Nilai Review</th>
                    </tr>
                    <tr>
                        <th>Minimum</th>
                        <th>Maximum</th>
                        <th>Average</th>
                    </tr>
                </table>
            </div>
        </div>
        <div id="pdf">
            <button id="preview" type="button">Preview PDF</button>
        </div>
    </section>
    <div class="printPreview">
        <div class="contentPreview">
            <span class="close">&times;</span>
            <p id="tab"> Not Chosen Yet </p>
            <button id="download" type="button">Download PDF</button>
            <hr>
            <div id="graph">
                <table>
                    <tr>
                        <th rowspan="2" id="tab"> Not Chosen Yet </th>
                        <th rowspan="2">Banyak Review</th>
                        <th colspan="3">Nilai Review</th>
                    </tr>
                    <tr>
                        <th>Minimum</th>
                        <th>Maximum</th>
                        <th>Average</th>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</body>
</html>